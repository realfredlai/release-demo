{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": ["jest", "node"],
    "paths": {
      "@/*": ["./apps/webapp-remix/*"],
      "@reebok/frontend-components": ["libs/frontend-components/src/index.ts"],
      "@reebok/backend-libs": ["libs/backend-libs/src/index.ts"],
      "@reebok/shared": ["libs/shared/src/index.ts"],
      "@reebok/conversation-bot": ["libs/conversation-bot/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../apps/webapp-remix/.next/types/**/*.ts",
    "../../dist/apps/webapp-remix/.next/types/**/*.ts",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
